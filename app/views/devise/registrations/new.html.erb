<div class="background-form-sign-up">
  <div class="container-form-sign-up">
  <h2>Hello, you can sign up here</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <%= f.input :img,
              label: "Choose an avatar",
              required: true
              %>

  <div class="form-inputs-sign-up">

    <div class="form-block">
    <%= f.input :email,
                required: true,
                autofocus: true ,
                input_html: { autocomplete: "email" }%>
    <%= f.input :password,
                required: true,
                placeholder: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { class: "placeholder-input", autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password" } %>
    </div>
    <div class="form-block">
    <%= f.input :username,
                required: true,
                autofocus: true ,
                input_html: { autocomplete: "last name" }%>
    <%= f.input :city_location,
                required: true,
                autofocus: true ,
                input_html: { autocomplete: "first name" }%>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "SIGN UP", class: "btn-form-sign-up" %>
  </div>
    <% end %>
    <div class="link-forgot-password">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>


