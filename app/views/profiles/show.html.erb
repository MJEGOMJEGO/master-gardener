
<div class="container">
    <div class="row center-row">
      <% User::Badge.all.each do |badge| %>
      <div class="list">
        <div class="col-xs-4 col-sm-3 col-md-2">
          <div class="container-badges">
              <%= image_tag "profile/badges/#{badge.id}.svg", title: badge.description, class: "badge-won" %>
              <p><%= "#{badge.explanation}" %></p>
          </div>
        </div>
          <% end %>
      </div>

    </div>

</div>


