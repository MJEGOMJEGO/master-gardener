<div class=" container background-form">
  <div class="container-form">
  <h2>Hey <%= current_user.username %>, add your new plant !</h2>
    <%= simple_form_for [@plant] do |f| %>
    <div class="form-inputs-plant">
      <div class="form-block input-plant">
        <%= f.input :nickname, required: true,
                    label: false,
                    placeholder: "What's the nickname of your plant ?",
                    input_html: { class: "placeholder-input" },
                    maxlength: 15 %>
        <div class="form-group">
          <%= f.association :specie, required: true %>
        </div>
      </div>
    </div>
    <div class="form-actions">
    <p><%= f.button :submit, "ADD THIS PLANT", class: "btn-form-sign-up" %></p>
    </div>
    <% end %>
  </div>
</div>

