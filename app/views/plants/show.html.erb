<div class="container container-show">
  <div class="row align-items-center">
    <div class="col col-xs-12 col-sm-6">
      <div class="plant-show">
        <div>
          <div class="plant-with-bubble">
            <div class="plant">
              <%= plants_svg @plant.specie.code, @plant.next_task_to_do.try(:action).try(:name) %>
            </div>
            <div class="bubble">
              <div class="circular">
                <%= @no_task %>
                <%= @task_text %>
                <div class="circular1"></div>
                <div class="circular2"></div>
              </div>
            </div>
          </div>

            <div class="plant-name">
              <%= @plant.nickname %>
              <%= link_to plant_path(@plant), method: :delete, data: { confirm: 'are you sure?' } do%>
                <i class="fas fa-trash-alt trash"></i>
              <% end %>
              <br><%= "#{@plant.life_points} / #{@plant.specie.max_life_points} PV" %>
            </div>
              <!-- <div class="progress-bar">https://codepen.io/dwidomski/pen/KBzuo</div> -->


        </div>

      </div>
    </div>
    <div class="col col-xs-12 col-sm-6">
        <div class="tasks">
          <ul>
            <% @plant.next_tasks_to_do.each do |task| %>
              <%# if @task %>

              <div class="task">
                <%= actions_svg task.action.code %>
                <%= task.action.name %> before <%= task.max_date %> - <%= task.status %>
                <%= link_to mark_as_done_task_path(task), class: "action", method: :patch do %>
                  <i class="fas fa-check-circle"></i>
                <% end %>


              </div>
            <% end  %>
          </ul>  <%# end %>

        </div>


    </div>
  </div>
</div>
