<div class="wraper-index">
  <div class="container custom-container">
    <div class="row center-row">
      <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="plants-shelf">
          <%= svg 'components', 'drink' %>
          <% @plants[0..1].each do |plant| %>
            <%= link_to plant_path(plant) do %>
                <%= svg 'plants', "#{plant.specie.code}" %>
              <% end %>
            <% end %>
          <% if [0, 1].include?(@plants.length) %>
            <%= link_to new_plant_path do %>
                <%= svg 'components', 'pot' %>
            <% end %>
          <% end %>
        </div>
      </div>

      <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="plants-shelf">
          <% @plants[2..3].each do |plant| %>
            <%= link_to plant_path(plant) do %>
                <%= svg 'plants', "#{plant.specie.code}" %>
            <% end %>
          <% end %>
          <% if [2, 3].include?(@plants.length) %>
            <%= link_to new_plant_path do %>
                <%= svg 'components', 'pot' %>
            <% end %>
          <% end %>
        </div>
      </div>

      <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="plants-shelf">
          <%= svg 'components', 'books' %>
          <% if @plants.count == 5 %>
            <%= link_to plant_path(@plants.last) do %>
                <%= svg 'plants', "#{@plants.last.specie.code}" %>
            <% end %>
          <% else %>
            <%= link_to new_plant_path do %>
                <%= svg 'components', 'pot' %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
